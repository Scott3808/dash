# Required (default configured for OpenAI)
OPENAI_API_KEY=sk-***

# Optional: Use a different model provider
# ANTHROPIC_API_KEY=sk-ant-***
# GOOGLE_API_KEY=***

# Exa API key for web research
# EXA_API_KEY=***

# =============================================================================
# DATA DATABASE (SQL Server - your business data)
# =============================================================================
# This is the database Dash will query for insights

DATA_DB_DRIVER=mssql+pyodbc
DATA_DB_HOST=localhost
DATA_DB_PORT=1433
DATA_DB_USER=sa
DATA_DB_PASS=YourPassword123
DATA_DB_DATABASE=your_database
DATA_DB_ODBC_DRIVER=ODBC Driver 17 for SQL Server

# =============================================================================
# AGENT DATABASE (PostgreSQL - agent state & vector storage)
# =============================================================================
# This database stores chat history, knowledge embeddings, and learnings
# Requires PostgreSQL with pgvector extension

AGENT_DB_HOST=localhost
AGENT_DB_PORT=5432
AGENT_DB_USER=ai
AGENT_DB_PASS=ai
AGENT_DB_DATABASE=ai
